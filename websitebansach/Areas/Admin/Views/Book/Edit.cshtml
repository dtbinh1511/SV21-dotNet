@model MyDB.Models.Book

@{
    ViewBag.Title = "Admin | Cập nhật sách";
}

@using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CreateAt)
    @Html.HiddenFor(model => model.CreateBy)


    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Cập nhật sách</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" value="Edit" class="btn btn-sm btn-success">Lưu[Cập nhật]</button>

                            <a href="@Url.Action("Index","Book")" class="btn btn-sm btn-info">
                                <i class="fas fa-arrow-left"></i> Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <div class="row">
                        <div class="col-md-9">

                            <div class="form-group">
                                <label>Tên sách <span class="text-danger">(*)</span> </label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Từ khóa <span class="text-danger">(*)</span> </label>
                                @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control", @rows = "3" })
                                @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Mô tả <span class="text-danger">(*)</span> </label>
                                @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control", @rows = "3" })
                                @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Tóm tắt </label>
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "3" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Kích thước </label>
                                @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Trọng lượng  </label>
                                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Ngày xuất bản </label>
                                @Html.EditorFor(model => model.DatePub, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.DatePub, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Giá</label>
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Giảm giá (%)</label>
                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @type = "number", @max = "30", @min = "0" } })
                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>SL Tồn</label>
                                @Html.EditorFor(model => model.QuantityStock, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                @Html.ValidationMessageFor(model => model.QuantityStock, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>SL Nhập</label>
                                @Html.EditorFor(model => model.QuantityImport, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                @Html.ValidationMessageFor(model => model.QuantityImport, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Ngày nhập </label>
                                @Html.EditorFor(model => model.DateImport, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.DateImport, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Danh mục</label>
                                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.ListCate, "Chọn danh mục", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Tác giả</label>
                                @Html.DropDownListFor(model => model.AuthorId, (SelectList)ViewBag.ListAu, "Chọn tác giả", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AuthorId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>NXB</label>
                                @Html.DropDownListFor(model => model.PublisherId, (SelectList)ViewBag.ListPub, "Chọn NXB", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PublisherId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Hình</label>
                                <input type="file" name="BookImage" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Hoạt động" }, new SelectListItem { Value = "2", Text = "Ngừng hoạt động" } }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>

}
