@model MyDB.Models.Category

@{
    ViewBag.Title = "Admin | Xác nhận xóa danh mục";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Xóa danh mục</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa không?');">
                                Xóa
                            </button>
                            <a href="@Url.Action("Edit","Category", new { id = Model.Id })" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a href="@Url.Action("Index","Category")" class="btn btn-sm btn-info">
                                <i class="fas fa-arrow-left"></i> Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <td>
                                Vị trí
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.DisplayOrder)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Mã danh mục
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Id)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Tên danh mục
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Danh mục cha
                            </td>

                            <td>
                                @ViewBag.ParentName
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Slug)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Slug)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Ngày tạo
                            </td>

                            <td>@string.Format("{0:dd/MM/yyyy}", Model.CreateAt)</td>

                        </tr>
                        <tr>
                            <td>
                                Người tạo
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.CreateBy)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Ngày cập nhật
                            </td>

                            <td>@string.Format("{0:dd/MM/yyyy}", Model.UpdateAt)</td>

                        </tr>
                        <tr>
                            <td>
                                Người cập nhật
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.UpdateBy)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.MetaDesc)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.MetaDesc)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Từ khóa
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.MetaKey)
                            </td>
                        </tr>

                        <tr>
                            <td>Trạng thái</td>
                            <td>
                                @if (Model.Status == 1)
                                {
                                    <span class="text-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="text-danger">Ngừng hoạt động</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
}
