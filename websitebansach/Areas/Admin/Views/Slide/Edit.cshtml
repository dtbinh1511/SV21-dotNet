@model MyDB.Models.Slide

@{
    ViewBag.Title = "Admin | Cập nhật slide";
}

@using (Html.BeginForm("Edit", "Slide", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreateAt)
    @Html.HiddenFor(model => model.CreateBy)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Cập nhật slide</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" value="Edit" class="btn btn-sm btn-success">Lưu[Cập nhật]</button>

                            <a href="@Url.Action("Index","Slide")" class="btn btn-sm btn-info">
                                <i class="fas fa-arrow-left"></i> Về trang chủ
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Hình</label>
                                <input class="form-control" name="Img" type="file" />
                            </div>  
                            <div class="form-group">
                                <label>Sự kiện</label>
                                @Html.EditorFor(model => model.Event, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Event, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Trạng thái</label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Hoạt động" }, new SelectListItem { Value = "2", Text = "Ngừng hoạt động" } }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-9"></div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
}
